generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String     @id @default(uuid())
  username  String
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Response  Response[]
}

model Game {
  id        String     @id @default(uuid())
  userId    String
  type      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Question  Question[]
}

model Question {
  id            String         @id @default(uuid())
  gameId        String
  questionText  String?
  correctAnswer String?
  game          Game           @relation(fields: [gameId], references: [id])
  AnswerChoice  AnswerChoice[]
  Responses     Response[]
}

model AnswerChoice {
  id         String   @id @default(uuid())
  choice     String
  questionId String
  question   Question @relation(fields: [questionId], references: [id])
}

model Response {
  id         String   @id @default(uuid())
  reponse    String
  questionId String
  userId     String
  isCorrect  Boolean
  question   Question @relation(fields: [questionId], references: [id])
  user       User     @relation(fields: [userId], references: [id])
}

model Dictionary {
  id         String  @id @default(uuid())
  word       String  @unique
  definition String
  audio      String?
  example    String?
}
